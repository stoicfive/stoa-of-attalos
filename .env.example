# Database Configuration
# PostgreSQL connection string for local development
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_journal

# Database connection details (alternative to DATABASE_URL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading_journal

# Application Environment
# Options: development, test, production
NODE_ENV=development

# API Configuration
# FastAPI server settings
API_PORT=8000
API_HOST=0.0.0.0
API_RELOAD=true

# Web Application
# Next.js server settings
NEXT_PUBLIC_API_URL=http://localhost:8000
WEB_PORT=3000

# Authentication & Security
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Stripe (Payment Processing)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password-here

# Logging & Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=false
ENABLE_EMAIL_NOTIFICATIONS=false

# Testing
# Test database (separate from development)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_journal_test

# CORS Settings
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=csv,json

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=lax
